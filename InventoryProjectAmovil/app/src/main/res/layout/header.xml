<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/gray_dark"
    android:layout_gravity="center"
    android:layout_width="match_parent" android:layout_height="70dp">

    <ImageView
        android:id="@+id/image_user"
        android:src="@drawable/profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/name_user"
        android:text="@string/name"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_user"
        android:layout_alignLeft="@+id/facturation"
        android:layout_alignStart="@+id/facturation" />
    <TextView
        android:id="@+id/facturation"
        android:layout_marginLeft="10dp"
        android:text="@string/fact"
        android:textColor="@color/pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_user"
        android:layout_below="@+id/name_user" />
</RelativeLayout>
